{
  "root": true,
  "env": {
    "node": true,
    "browser": true
  },
  "extends": [
    "plugin:vue/vue3-recommended",
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "tabWidth": 2,
        "useTabs": false,
        "printWidth": 140,
        "singleQuote": true,
        "endOfLine": "lf"
      }
    ],
    // "vue/no-deprecated-v-on-native-modifier": "warn",
    "vue/component-name-in-template-casing": ["error", "PascalCase"],
    "no-console": "warn",
    "no-debugger": "warn"
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "parser": "@babel/eslint-parser",
    "requireConfigFile": false
  }
}
